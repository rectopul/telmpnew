.topbar_nav
    width 100%
    height: 64px;
    background-color: color-primary
    position relative

    &:after
        box-shadow: 0 2px 4px 0 #9ba9bb4d
        content: ''
        display: block
        position: absolute
        z-index: 10
        width: 100%
        height: 2px
        bottom: 0

    &__container
        width 100%
        max-width: 1280px
        height 64px
        margin 0 auto
        display flex
        justify-content space-between
        align-items center
        padding 0 24px

        .logo
            figure
                width 142px
                background-image url('/img/icons/company.svg')

        > div
            height: 100%
            max-width: 142px
            display: flex
            justify-content: center
            align-items: center

    @media screen and (max-width 768px)
        display: none

    figure
        background-image: url('../img/brand/logo-login.jpg')
        width 59px
        height: 59px
        background-repeat: no-repeat
        background-position: center center

    