.center__billboard
    width 100%
    height 182px
    background-color color-primary

.protect
    display flex
    justify-content center
    margin: 2rem 0 5.5rem
    font-size: .75rem
    color #666
    font-weight: 200
    line-height: 1.35
    font-smoothing: antialiased
    font-family family-font

    a
        color: #3483fa
        font-size: .625rem
        font-weight: 200
        line-height: 1.35
        font-family family-font

.main-form
    width 100%
    max-width 424px
    background-color #fff
    margin: -6.875rem auto 0
    border-radius 6px
    padding-top 4rem
    font-family family-font
    box-shadow: 0 0.0625rem 0.125rem 0 #00000026
    text-size-adjust: 100%
    tap-highlight-color: #0000001a


    &-login

        > article,
        > header
            padding 0 4rem

        > footer
            width 100%
            text-align center
            height 53px
            margin-top 1.777rem

            a
                font-family: family-font
                width 100%
                height 100%
                display flex
                justify-content center
                align-items center
                color color-secondary
                font-size: .875rem
                font-weight: 600
                border-top: 1px solid rgba(0,0,0,.07)
                border-bottom-left-radius 6px
                border-bottom-right-radius 6px

                &:hover
                    background-color: #f5f5f5
                    transition: background-color .15s ease-out

        &__card
            display flex
            justify-content:  center
            flex-direction: column

            h3
                font-size 16px
                font-weight 600
                text-align: center

            .card_container
                margin 15px 0px
                display: flex
                align-items center
                justify-content: center
                font-size 18px
                text-transform uppercase
                figure
                    margin 0
                    margin-right 10px
                    height 20px

                    img
                        height 100%



        &__username
            display flex
            align-items center
            width 100%
            margin: 1rem  0

            > div
                display flex
                align-items center
                width auto
                border-radius: 1rem
                border: 0.0625rem solid #e7e7e7
                height: 1.75rem

                span
                    font-size: .75rem
                    font-style: normal
                    font-weight: 600
                    letter-spacing: normal
                    line-height: 1.67
                    max-width: 13.625rem
                    overflow-x: hidden
                    padding: 0.1875rem 0
                    text-align: left
                    text-overflow: ellipsis
                    color #000000e6
                    font-family family-font

                a
                    display: flex
                    flex-direction: column;
                    height: 1.5rem;
                    margin: 0.0625rem 0.0625rem 0.0625rem 0.375rem;
                    width: 1.5625rem;
                    border-radius: 50%

                    &:hover
                        background-color: #00000012
                        transition: background-color .1s ease-in

                i
                    margin-left: 0.0625rem
                    position: relative
                    top: 50%

                    &:before
                        background: #333;
                        content: "";
                        display: block;
                        height: 0.0625rem;
                        left: 50%;
                        margin-left: -0.375rem;
                        position: absolute;
                        top: 50%;
                        width: 0.75rem;
                        transform: rotate(45deg)
                        

                    &:after
                        background: #333;
                        content: "";
                        display: block;
                        height: 0.0625rem;
                        left: 50%;
                        margin-left: -0.375rem;
                        position: absolute;
                        top: 50%;
                        width: 0.75rem;
                        transform: rotate(-45deg)

                figure
                    width 27px
                    height 26px
                    margin: 0 0.625rem 0 0
                    padding 0
                    display flex
                    align-items center
                    justify-content center

        &__helper
            display flex
            justify-content center
            align-items center

            a
                color color-secondary
                font-weight 600
                font-size 16px
                width 100%
                background-color #fff
                height 48px
                border-color transparent
                box-shadow: 0 0 0 0 #ffffff
                border-radius 6px
                cursor pointer
                text-align center
                display flex
                justify-content center
                align-items center

                &:hover
                    background-color #479ad11a
                    transition: background-color .2s ease-in

        &__submit
            margin: 2rem 0 1.5rem
            margin-bottom 0.45rem
            display flex
            justify-content center
            align-items center

            

            button
                width 100%
                color #fff
                background-color color-secondary
                height 48px
                border-color transparent
                box-shadow: 0 0 0 0 #ffffff
                font-size 16px
                border-radius 6px
                cursor pointer

                &:hover
                    background-color color-secondary-hover

        &__inputs

            .notify-error
                display flex
                align-items center
                color color-danger
                font-weight: 600
                font-size 13px
                font-family: Proxima Nova
                height 20px

                figure
                    margin 0
                    margin-right 5px
                    display flex   
                    align-items center

            &.has-error
                input
                    box-shadow: 0 0 0 0.125em color-danger

            input
                width 100%
                height: 48px
                border-radius: 0.375em
                border 0
                box-shadow: 0 0 0 1px #00000040
                outline none
                padding: 0.8125em 0.75em

                &:active,
                &:focus
                    box-shadow: 0 0 0 0.125em color-secondary

        &__login
            width 100%
            display flex
            flex-direction column
            justify-content flex-start
            align-items: flex-start
            margin-bottom 5px

            .input-container
                width: 100%;
                height: 48px;
                border-radius: 0.375em;
                border: 0;
                box-shadow: 0 0 0 1px #00000040
                outline: none;
                padding: 0.8125em 0.75em
                display flex
                align-items: center

                img
                    height 20px
                    filter grayscale(1)
                    opacity .4

                input
                    box-shadow none
                    border-radius 0

        label
            font-size: 14px
            color: #000000e6
            line-height: 1.0714285714em
            margin: 0 0 0.4285714286em 0.4285714286em

        

        &__header
            font-weight 600
            margin: 1.875rem 0 1.625rem
            margin-top: 0

            h2
                letter-spacing: .0125rem
                line-height: 1.25